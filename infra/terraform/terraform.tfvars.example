# AWS Configuration
aws_region     = "eu-south-1"
aws_account_id = "102724112773"

# Project Configuration
project_prefix = "nil"
environment    = "prod"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-south-1a", "eu-south-1b"]
enable_nat_gateway = true

# ECS Configuration
inference_cpu           = 512
inference_memory        = 1024
rag_copilot_cpu        = 512
rag_copilot_memory     = 1024

# Database Configuration
db_instance_class         = "db.t3.micro"
db_name                   = "neuromorphic"
db_username               = "niladmin"
db_password               = "CHANGE_ME_SECURE_PASSWORD_MIN_8_CHARS"
db_allocated_storage      = 20
db_backup_retention_days  = 7

# Monitoring Configuration
grafana_admin_password = "CHANGE_ME_SECURE_PASSWORD_MIN_8_CHARS"
prometheus_version     = "v2.53.0"
grafana_version        = "11.1.0"

# Domain Configuration
domain_name = "api.neuromorphicinference.com"
